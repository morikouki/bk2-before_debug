<h2>検索結果</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
			</td>
			<td><%= user.name %></td>
			<td><%= user.introduction %></td>
		</tr>
	<% end %>
	</tbody>
</table>